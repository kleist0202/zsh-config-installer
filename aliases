#!/bin/bash
alias v='nvim'
alias za='zathura'
alias confterm='cd ~/Programs/st; nvim ~/Programs/st/config.def.h'
alias confdwm='cd ~/Programs/dwm;nvim ~/Programs/dwm/config.h'
alias confdmenu='cd ~/Programs/dmenu-5.0; nvim ~/Programs/dmenu-5.0/config.def.h'
alias confncm='cd ~/.config/ncmpcpp ;nvim ~/.config/ncmpcpp/config'
alias confnvim='cd ~/.config/nvim'
alias sudo='sudo '
alias cool_mount='sudo ~/.scripts/mounting'
alias cool_umount='sudo ~/.scripts/umounting'
alias bc='bc -ql'
myawk() { awk '{print $2}' "$@" }
alias sc='nvim $(du -a ~/.scripts/* | myawk | fzf)'
alias music='ncmpcpp'
alias cool_pacman='pacman -Slq | fzf --multi --preview "pacman -Si {1}" | xargs -ro sudo pacman -S'
alias what_i_got='pacman -Qq | fzf --multi --preview "pacman -Qi {1}" | xargs -ro sudo pacman -Rns'
alias dup='exo-open --working-directory "$(pwd)" --launch TerminalEmulator'
# alias dup='wezterm start -- bash --norc -c "echo -ne '\''\x1b]0;Wezterm\x1b\\'\''; cd $(pwd); zsh"'
alias dup='nohup st &>/dev/null &'
alias dup_noswallow='nohup st -t St_noswallow &>/dev/null &'
alias bookmarksfile='nvim ~/.local/share/snippets'
alias wget='wget --hsts-file="~/.local/share/wget-hsts"'

alias latexcompile='docker run  --rm --volume "${PWD}:${PWD}" --workdir "${PWD}" latex'
alias bibercompile='docker run  --rm --volume "${PWD}:${PWD}" --workdir "${PWD}" --entrypoint biber latex'
